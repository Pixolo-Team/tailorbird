---
// TYPES //
import type { ServicesInfo } from "../../types/services";

// SERVICES //
import Hero from "../../sections/services/Hero.astro";

// CONSTANTS //
import { API_URL } from "../../constants";

// OTHERS //
import Layout from "../../layouts/Layout.astro";

// SECTIONS //
import Services from "../../sections/home/Services.astro";
import OurApproach from "../../sections/services/OurApproach.astro";
import Faq from "../../sections/home/Faq.astro";
import Tools from "../../sections/services/Tools.astro";

let servicesInfo: ServicesInfo = { categories: [], services: [] };
try {
  const res = await fetch(API_URL);
  const json = await res.json();
  servicesInfo = json?.data?.services_info ?? { categories: [], services: [] };
} catch (e) {
  console.error(e);
}
---

<Layout>
  <Hero />
  {servicesInfo && <Services servicesInfo={servicesInfo} showArrow />}
  <OurApproach />
  <Tools />
  <Faq />
</Layout>
