---
// or inline SVGs if you donâ€™t want React deps

interface Props {
  icon: string; // Astro supports passing raw HTML/SVG as slot or prop
  title: string;
  negativePoint: string;
  positivePoint: string;
}

const { icon, title, negativePoint, positivePoint } = Astro.props;
---

<div
  class="border-n-200 bg-n-50 relative flex min-h-[250px] flex-col gap-3 overflow-hidden rounded-3xl border-2 px-5 py-6 md:gap-5 md:px-7 md:py-8 lg:min-h-[280px]"
>
  <!-- Background Icon (watermark) -->
  <div
    class="pointer-events-none absolute -right-[50px] -bottom-[60px] w-[250px] opacity-6 md:-right-[70px] md:-bottom-[90px] md:w-[300px]"
  >
    <img src={icon} alt="" class="w-full" />
  </div>

  <!-- Icon and Title -->
  <div class="flex items-center gap-3 md:gap-5">
    <img src={icon} alt="" class="h-8 w-8 object-contain md:h-12 md:w-12" />
    <!-- Card Title -->
    <p class="text-n-950 text-2xl font-medium md:text-4xl">{title}</p>
    <!-- Info icon -->
    <div class="text-n-300">
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <g clip-path="url(#clip0_3443_109)">
          <path
            d="M10.125 17.8125V11.8125C10.125 10.777 10.9645 9.9375 12 9.9375C13.0355 9.9375 13.875 10.777 13.875 11.8125V17.8125C13.875 18.848 13.0355 19.6875 12 19.6875C10.9645 19.6875 10.125 18.848 10.125 17.8125Z"
            fill="currentColor"></path>
          <path
            d="M13.875 7.125C13.875 8.16053 13.0355 9 12 9C10.9645 9 10.125 8.16053 10.125 7.125C10.125 6.08947 10.9645 5.25 12 5.25C13.0355 5.25 13.875 6.08947 13.875 7.125Z"
            fill="currentColor"></path>
          <path
            d="M21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21V24C5.37258 24 0 18.6274 0 12C0 5.37258 5.37258 0 12 0C18.6274 0 24 5.37258 24 12C24 18.6274 18.6274 24 12 24V21C16.9706 21 21 16.9706 21 12Z"
            fill="currentColor"></path>
        </g>
        <defs>
          <clipPath id="clip0_3443_109">
            <rect width="24" height="24" fill="currentColor"></rect>
          </clipPath>
        </defs>
      </svg>
    </div>
  </div>

  <div class="space-y-2 md:space-y-3">
    <!-- Negative Point -->
    <div class="flex items-center gap-5 px-4 md:px-10">
      <div class="text-n-600">
        <svg
          class="size-6 md:size-8"
          width="38"
          height="38"
          viewBox="0 0 38 38"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect
            x="1.3"
            y="1.3"
            width="34.4"
            height="35.4"
            rx="17.2"
            stroke="currentColor"
            stroke-width="2.6"></rect>
          <path
            d="M24.5 13L12.5 25M12.5 13L24.5 25"
            stroke="currentColor"
            stroke-width="2.6"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </div>
      <p class="text-n-900 text-base leading-relaxed font-normal md:text-lg">
        {negativePoint}
      </p>
    </div>

    <!-- Positive Point -->
    <div class="flex items-center gap-5 px-4 md:px-10">
      <div class="text-blue-500">
        <svg
          class="size-6 md:size-8"
          width="38"
          height="38"
          viewBox="0 0 38 38"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g clip-path="url(#clip0_3443_30)">
            <rect
              x="1.3"
              y="1.3"
              width="34.4256"
              height="35.4"
              rx="17.2128"
              fill="currentColor"
              stroke="currentColor"
              stroke-width="2.6"></rect>
            <path
              d="M10.7179 20.4614L15.9149 26.3075L26.3077 14.6152"
              stroke="#EBF3FF"
              stroke-width="2.6"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </g>
          <defs>
            <clipPath id="clip0_3443_30">
              <rect width="38" height="38" fill="white"></rect>
            </clipPath>
          </defs>
        </svg>
      </div>
      <p
        class="text-base leading-relaxed font-semibold text-blue-500 md:text-lg"
      >
        {positivePoint}
      </p>
    </div>
  </div>
</div>
