---
// or inline SVGs if you donâ€™t want React deps

interface Props {
  icon: any; // Astro supports passing raw HTML/SVG as slot or prop
  title: string;
  negativePoint: string;
  positivePoint: string;
}

const { icon, title, negativePoint, positivePoint } = Astro.props;
---

<div class="border-n-200 bg-n-50 space-y-6 rounded-3xl border-2 p-8">
  <!-- Icon and Title -->
  <div class="flex items-center gap-4">
    <div class="text-blue-500">
      {icon}
    </div>
    <h3 class="text-n-950 text-3xl">{title}</h3>
  </div>

  <!-- Negative Point -->
  <div class="flex items-center gap-4">
    <div
      class="border-n-300 mt-1 flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full border-2"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="38"
        height="39"
        viewBox="0 0 38 39"
        fill="none"
      >
        <rect
          x="1.3"
          y="1.3"
          width="35.4"
          height="36.4"
          rx="17.7"
          stroke="#45556C"
          stroke-width="2.6"></rect>
        <path
          d="M25 13.5L13 25.5M13 13.5L25 25.5"
          stroke="#45556C"
          stroke-width="2.6"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
    <p class="text-n-900 text-xl leading-relaxed">
      {negativePoint}
    </p>
  </div>

  <!-- Positive Point -->
  <div class="flex items-center gap-4">
    <div
      class="mt-1 flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full border-2 border-blue-500 bg-blue-500"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="38"
        height="39"
        viewBox="0 0 38 39"
        fill="none"
      >
        <rect
          x="1.3"
          y="1.3"
          width="35.4"
          height="36.4"
          rx="17.7"
          fill="#006DFD"
          stroke="#006DFD"
          stroke-width="2.6"></rect>
        <path
          d="M11 21L16.3337 27L27 15"
          stroke="#EBF3FF"
          stroke-width="2.6"
          stroke-linecap="round"
          stroke-linejoin="round"></path>
      </svg>
    </div>
    <p class="text-xl leading-relaxed font-bold text-blue-500">
      {positivePoint}
    </p>
  </div>
</div>
