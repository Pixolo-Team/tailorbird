---
// IMPORT //
import BrandLogo from "../BrandLogo.astro";
import Button from "../Button.astro";
import Hamburger from "../Hamburger.astro";

// DATA //
const headerItems = [
  { name: "Home", href: "#", active: true },
  { name: "About", href: "#" },
  { name: "Services", href: "#" },
  { name: "Life at STYL", href: "#" },
  { name: "Case Studies", href: "#" },
  { name: "Career", href: "#" },
];
---

<!-- Header Component -->
<header>
  <div class="container mx-auto flex justify-between items-center py-2 px-4">
    <!-- Brand Logo -->
    <div class="">
      <a href="#">
        <!-- Brand logo component -->
        <BrandLogo variant="white" />
      </a>
    </div>
    <div class="flex-1">
      <!-- Navbar -->
      <nav class="hidden lg:flex lg:gap-10 xl:gap-18 items-center justify-end">
        <!-- Pages Links -->
        <ul class="flex lg:gap-9 xl:gap-14 font-medium text-base items-center">
          {
            headerItems.map((headerItem) => (
              <li>
                <a
                  href={headerItem.href}
                  class={headerItem.active ? "font-semibold relative" : null}
                >
                  {headerItem.name}
                  {headerItem.active ? (
                    <span class="absolute size-1.5 rounded-full bg-blue-500 -right-3 bottom-[4px]" />
                  ) : null}
                </a>
              </li>
            ))
          }
        </ul>

        <!-- Button Component -->
        <Button text={"Lets Talk"} variant="default" showRightDot />
      </nav>

      <!-- Hamburger Component -->
      <Hamburger />
    </div>
  </div>
</header>
