---
// INTERFACE //
interface Props {
  progress: number;
}

const { progress } = Astro.props;
---

<div class="flex w-full flex-col gap-1">
  <!-- Progress label -->
  <p class="text-n-50 text-right text-xs font-medium md:text-xl lg:text-3xl">
    {progress}%
  </p>

  <!-- Progress bar -->
  <div class="bg-n-50 h-1 w-full overflow-hidden rounded-xl lg:h-3">
    <div
      class="h-full bg-blue-500 transition-all duration-300 ease-in-out"
      style={`width: ${progress}%`}
    >
    </div>
  </div>
</div>
