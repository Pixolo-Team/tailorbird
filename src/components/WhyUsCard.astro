---
interface Props {
  title: string;
  description: string;
  image: string;
  alt?: string;
}

const { title, description, image, alt = "" } = Astro.props;
---

<div class="bg-n-100 h-full w-full rounded-2xl p-2 md:p-4">
  <div class="flex justify-between gap-6">
    <!-- Left: Texts -->
    <div class="flex flex-1 flex-col gap-10">
      <!-- Card title -->
      <p
        class="text-n-950 word-wrap text-lg font-semibold md:text-xl lg:text-2xl"
      >
        {title}
      </p>
      <!-- Card Description -->
      <p class="text-n-700 text-xs font-normal md:text-base">
        {description}
      </p>
    </div>

    <!-- Right: Image -->
    <div class="flex h-full w-[100px] items-center justify-center md:w-[173px]">
      <img src={image} alt={alt} class="w-full rounded-lg" />
    </div>
  </div>
</div>
