---
interface Props {
  title: string;
  description: string;
  image: string;
  alt?: string;
}

const { title, description, image, alt = "" } = Astro.props;
---

<div
  class="bg-n-100 md::flex-col flex flex-row justify-between gap-6 rounded-2xl px-4 md:gap-9 md:px-6 lg:flex-row"
>
  <!-- Left: Texts -->
  <div class="flex flex-col justify-between py-4 md:py-6">
    <!-- Card title -->
    <p class="text-n-950 text-lg font-semibold md:text-3xl lg:text-4xl">
      {title}
    </p>
    <!-- Card Description -->
    <p class="text-n-700 text-xs font-normal md:text-base lg:text-lg">
      {description}
    </p>
  </div>

  <!-- Right: Image -->
  <div class="object-contain py-2 md:w-full">
    <img
      src={image}
      alt={alt}
      class="h-full rounded-lg object-cover md:w-full"
    />
  </div>
</div>
