---
// COMPONENTS //
import Button from "../../components/Button.astro";

const heroContent = {
  title: {
    highlightedText: "Inside STYL:",
    text: "Where Talent Finds Its Rhythm",
  },
};
---

<section class="relative flex h-[55vh] w-full flex-col xl:h-[calc(100vh-95px)]">
  <div
    class="relative container mx-auto flex flex-1 items-center px-6 xl:px-12 2xl:px-6"
  >
    <div class="fade-in flex flex-col gap-10 md:gap-20">
      <!-- Upper Title  -->
      <div
        class="text-n-950 text-4xl leading-12 font-bold tracking-tight md:text-5xl md:leading-14 lg:text-6xl lg:leading-[70px] 2xl:text-7xl 2xl:leading-[88px]"
      >
        <p class="text-blue-500">{heroContent.title.highlightedText}</p>
        <p class="md:w-[60%]">{heroContent.title.text}</p>
      </div>

      <!-- Button -->
      <!-- <div class="w-[180px] md:w-[230px]">
        <Button variant="outline" text="Life At Styl" showLeftDot />
      </div> -->
    </div>
  </div>

  <div
    class="card-anim card-left absolute right-0 -bottom-10 -z-1 hidden size-60 items-center justify-center sm:block sm:size-80 md:size-100 lg:bottom-0 xl:flex xl:size-140 2xl:size-180"
  >
    <img src="/icons/run-boey.svg" alt="" class="h-full" />
  </div>

  <!-- Scroll to explore text bar -->
  <div
    class="flex h-[80px] w-full items-center justify-between px-3 text-xs font-normal sm:px-12 md:text-sm lg:text-base"
  >
    <span class="hidden text-xs md:block md:text-3xl">+</span>
    <span class="text-xs md:text-3xl">+</span>
    <span class="text-xs md:text-3xl">+</span>
    <!-- Text -->
    <p class="bouncy text-n-800 tracking-widest">SCROLL TO EXPLORE</p>

    <span class="hidden text-xs md:block md:text-3xl">+</span>
    <span class="text-xs md:text-3xl">+</span>
    <span class="text-xs md:text-3xl">+</span>
  </div>
</section>
