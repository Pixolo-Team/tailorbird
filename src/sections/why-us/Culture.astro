---
import BrandLogo from "../../components/BrandLogo.astro";
import CultureAndPeopleCard from "../../components/CultureAndPeopleCard.astro";

const cultureDetails = {
  section: "Synergy",
  cards: [
    {
      icon: "Teamwork",
      title: "Synergy at the Core",
      points: ["Empower individuals", "Succeed as one", "Amplify strength"],
      bgText: "S",
    },
    {
      icon: "DecentWorkAndEconomicGrowth",
      title: "Tenancy for Excellence",
      points: [
        "Pursue perfection with purpose",
        "Set benchmarks, not limits",
        "Exceed goals, inspire trust",
      ],
      bgText: "T",
    },
    {
      icon: "CollaborationsIdea",
      title: "Yearning for Innovation",
      points: [
        "Adapt quickly",
        "Innovate constantly",
        "Lead change with confidence",
      ],
      bgText: "Y",
    },
    {
      icon: "BusinessHandshake",
      title: "Loyal Partnerships",
      points: [
        "Collaborate deeply",
        "Understand needs",
        "Deliver beyond expectations",
      ],
      bgText: "L",
    },
  ],
};
---

<section class="m-auto">
  <div class="inner-container container mx-auto flex flex-col gap-8 md:gap-14">
    <!-- Section title wrapper -->
    <div class="fade-in w-full space-y-6 md:space-y-12 lg:space-y-14">
      <div>
        <p class="text-2xl font-light tracking-widest uppercase md:text-4xl">
          The
        </p>
        <div
          class="flex flex-col flex-wrap items-baseline gap-1 md:flex-row md:flex-nowrap md:gap-3 md:gap-5"
        >
          <!-- Brand logo -->
          <BrandLogo variant="default" classes="w-38 md:w-88 lg:w-76" />
          <!-- Asile text -->
          <p class="text-2xl font-light md:text-4xl lg:tracking-widest">
            CULTURE & PEOPLE
          </p>
        </div>
      </div>
      <div class="space-y-16">
        <p
          class="text-2xl font-light md:text-4xl md:leading-12 lg:w-[80%] lg:text-6xl lg:leading-[69px]"
        >
          Rooted in values, driven by people â€” our culture is where tradition
          meets tomorrow.
        </p>
      </div>
    </div>

    <div class="flex flex-wrap gap-3">
      {
        cultureDetails.cards.map((cultureItem, index) => (
          <div
            class="card-anim w-full sm:w-[47%] lg:w-[32%] 2xl:w-[24%]"
            style={`--delay: ${index * 0.1}s`}
          >
            {/* // Service card component */}
            <CultureAndPeopleCard {...cultureItem} />
          </div>
        ))
      }
    </div>
  </div>
</section>
