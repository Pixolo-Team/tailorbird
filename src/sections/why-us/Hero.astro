---
import ScrollToExplore from "../../components/ScrollToExplore.astro";

const heroContent = {
  title: {
    topText: "Redefining",
    highlightedText: "Outsourcing",
    bottomText: "with Innovation & Heart",
  },
};
---

<section class="relative flex h-[55vh] w-full flex-col xl:h-[calc(100vh-95px)]">
  <div class="relative container mx-auto flex flex-1 items-center px-6">
    <!-- Upper Title  -->
    <div
      class="fade-in text-n-950 text-4xl leading-10 font-bold tracking-tight md:w-[60%] md:text-5xl md:leading-14 lg:text-7xl lg:leading-[88px] xl:w-[45%] 2xl:w-[38%]"
    >
      <p>{heroContent.title.topText}</p>
      <p class="text-blue-500">{heroContent.title.highlightedText}</p>
      <p>{heroContent.title.bottomText}</p>
    </div>
  </div>

  <div class="bouncy absolute right-[10%] bottom-[15%] hidden sm:block">
    <img src="/icons/about-us.svg" alt="" />
  </div>

  <!-- Scroll to explore text bar -->
  <ScrollToExplore />
</section>
