---
// COMPONENTS //
import Form from "../../components/Form.astro";
import Input from "../../components/Input.astro";

// Dummy CMS data
const contactPageDetails = {
  // Form top title
  formIntro: {
    small: "Want to drive efficiency? Want us to handle the mundane tasks?",
    big: "We’re always listening.",
  },
  // Email + Phone (same style)
  contactDetails: [
    {
      title: "General inquiries",
      value: "info@stylsmyth.com",
    },
    {
      title: "Phone Number",
      value: "+91 7894561230",
    },
  ],
  // Office (different block)
  office: {
    addressTitle: "Sun Mill Compound",
    address:
      "Todi Industrial Estate, 4th floor, B wing, Lower Parel West, Mumbai, Maharashtra - 400013",
  },
};
---

<section>
  <div class="flex flex-col items-center justify-center">
    <!-- Main title -->
    <h2
      class="w-[200%] text-center text-7xl leading-tight font-medium tracking-tighter sm:text-[120px] md:text-[154px] lg:text-[208px] xl:text-[260px] 2xl:text-[340px]"
    >
      Work <span class="text-blue-500">together</span>
    </h2>
    <div
      class="container mx-auto flex flex-col flex-wrap gap-10 px-6 py-8 md:gap-18 md:py-24 lg:gap-24 lg:px-14"
    >
      <div>
        <!-- Second main title -->
        <p class="text-2xl font-light md:text-5xl">
          Let’s take <span class="font-medium">“getting things done”</span> off your
          plate
        </p>
      </div>

      <!-- Form + Contact Details Wrapper -->
      <div class="space-y-8 md:space-y-14 lg:space-y-20">
        <!-- Form top title part -->
        <div class="space-y-2">
          <p
            class="lg::w-[45%] text-md w-full font-medium md:w-[80%] md:text-xl lg:text-2xl"
          >
            {contactPageDetails.formIntro.small}
          </p>
          <p class="text-xl font-semibold md:text-2xl lg:text-3xl">
            {contactPageDetails.formIntro.big}
          </p>
        </div>
