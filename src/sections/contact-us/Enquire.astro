        <div>
          <div
            class="flex flex-col flex-wrap gap-16 md:gap-20 lg:flex-row lg:items-start"
          >
            <!-- Form wrapper -->
            <div class="flex w-full flex-col gap-10 md:gap-20 xl:w-[42%]">
              <!-- Contact form  -->
              <Form />
            </div>

            <div
              class="flex w-full flex-col justify-between gap-18 md:flex-row md:gap-20 lg:flex-1"
            >
              <!-- Contact details wrapper -->
              <div
                class="flex flex-col gap-10 self-start sm:flex-row md:flex-col lg:flex-1"
              >
                <!-- Mail details -->
