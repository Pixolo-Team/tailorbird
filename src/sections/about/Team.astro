---
// COMPONENTS //
import SectionHeading from "../../components/SectionHeading.astro";
import TeamCard from "../../components/TeamCard.astro";
import type { TeamMember } from "../../types/team";

const teamDetails = {
  title: "Who make the",
  highlightedText: "Magic Happen",
  description:
    "We give you the runway to grow, the tools to deliver, and the teams to back you.",
};

const { teamMembers } = Astro.props as { teamMembers: TeamMember[] };
---

<section class="m-auto">
  <div class="inner-container container mx-auto space-y-11 lg:space-y-22">
    <!-- Heading -->
    <SectionHeading {...teamDetails} />

    <!-- Team members wrapper -->
    <div class="flex flex-col flex-wrap justify-center gap-10 md:flex-row">
      {
        teamMembers.map((member: TeamMember, index: number) => (
          // Team Card
          <div
            class="card-anim card-left h-full w-full md:w-[45%] lg:w-[30%]"
            style={`--delay: ${index * 0.1}s`}
          >
            <TeamCard {...member} />
          </div>
        ))
      }
    </div>
  </div>
</section>
