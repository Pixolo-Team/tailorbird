---
// COMPONENTS //
import ServiceCard from "../../components/ServiceCard.astro";

const colors = ["bg-blue-50", "bg-n-100", "bg-n-200"];

const designServices = [
  { icon: "/icons/shirt.svg", title: "Sports/University Teams Licensing" },
  { icon: "/icons/filter.svg", title: "Fashion Design" },
  { icon: "/icons/box.svg", title: "3D Fashion Product Development" },
  { icon: "/icons/video-editing.svg", title: "Video Editing" },
  { icon: "/icons/image-gen.svg", title: "Image Retouching and Editing" },
  { icon: "/icons/template.svg", title: "Graphic Design for Marketing" },
  { icon: "/icons/kite-roller.svg", title: "Textile Design" },
];
const tradeServices = [
  { icon: "/icons/recycle.svg", title: "Product Lifecycle Management" },
  { icon: "/icons/input.svg", title: "Import and Logistics Management" },
  { icon: "/icons/buy-sell.svg", title: "E-commerce and Content Marketing" },
];

const { showArrow = false } = Astro.props;
---

<section>
  <div
    class="container mx-auto flex flex-col gap-14 px-6 py-18 md:gap-24 md:py-24 lg:px-15 xl:px-8"
  >
    <!-- Section title wrapper -->
    <div class="space-y-1 md:space-y-3">
      <p class="text-4xl font-semibold text-blue-500 md:text-6xl 2xl:text-7xl">
        What We Do?
      </p>
      <p
        class="w-full text-lg leading-normal font-light md:text-2xl lg:w-[56%] lg:text-3xl"
      >
        Creative, strategic, and operational solutions — built for the fashion
        industry’s fast lane.
      </p>
    </div>

    <!-- Services wrapper -->
    <div class="flex flex-col gap-18 xl:flex-row xl:gap-5">
      <!-- Design solutions -->
      <div class="flex w-full flex-col gap-10 md:gap-16 xl:w-1/2">
        <p class="text-2xl font-medium md:text-3xl">Design Solutions</p>
        <div class="flex flex-wrap gap-3">
          {
            designServices.map((service, serviceIndex) => (
              <div class="w-full sm:w-[48%]">
                {/* // Service card component */}
                {showArrow ? (
                  <a href="/services/service-consumption?id=1">
                    <ServiceCard
                      icon={service.icon}
                      title={service.title}
                      color={colors[serviceIndex % colors.length]}
                      showArrow={showArrow}
                    />
                  </a>
                ) : (
                  <ServiceCard
                    icon={service.icon}
                    title={service.title}
                    color={colors[serviceIndex % colors.length]}
                  />
                )}
              </div>
            ))
          }
        </div>
      </div>
      <!-- Trade solutions -->
      <div class="flex w-full flex-col gap-10 md:gap-16 xl:w-1/2">
        <p class="text-2xl font-medium md:text-3xl">Trade Solutions</p>
        <div class="flex flex-wrap gap-3">
          {
            tradeServices.map((service, serviceIndex) => (
              <div class="w-full sm:w-[48%]">
                {showArrow ? (
                  <a href="/services/service-consumption?id=2">
                    <ServiceCard
                      icon={service.icon}
                      title={service.title}
                      color={colors[serviceIndex % colors.length]}
                      showArrow={showArrow}
                    />
                  </a>
                ) : (
                  <ServiceCard
                    icon={service.icon}
                    title={service.title}
                    color={colors[serviceIndex % colors.length]}
                  />
                )}
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
