<section
  class="flex h-[55vh] w-full flex-col sm:h-[45vh] xl:h-[calc(100vh-90px)]"
>
  <div class="relative container mx-auto flex flex-1 items-center px-6">
    <!-- Text content wrapper -->
    <div class="flex w-full flex-col gap-10 lg:gap-16">
      <div
        class="text-n-900 relative text-3xl font-bold sm:w-full sm:text-4xl sm:leading-normal md:text-5xl xl:text-8xl"
      >
        <!-- Section main title -->
        <p class="hidden sm:block">Full–time remote teams,</p>
        <p class="hidden sm:block sm:text-right">tailored to your brand.</p>
        <p class="w-[90%] leading-[38px] sm:hidden">
          Full–time remote teams, tailored to your brand.
        </p>

        <!-- Floating arrow icon -->
        <img
          src="/icons/arrow.svg"
          alt=""
          class="absolute right-[38%] -bottom-10 h-10 md:right-[10%] md:-bottom-12 md:h-13 lg:-bottom-20 lg:h-24"
        />
      </div>

      <!-- Subtitle -->
      <p
        class="text-n-500 pr-[18%] text-right text-sm font-medium sm:text-xl md:pr-[16%] md:text-2xl lg:text-5xl"
      >
        at a fraction of the cost
      </p>
    </div>
  </div>
  <!-- Scroll to explore text bar -->
  <div
    class="flex h-[80px] w-full items-center justify-between px-3 text-xs font-normal sm:px-12 md:text-sm lg:text-base"
  >
    <span class="hidden md:block">+</span>
    <span class="">+</span>
    <span class="">+</span>
    <!-- Text -->
    <p class="text-n-800 tracking-widest">SCROLL TO EXPLORE</p>
    <span class="hidden md:block">+</span>
    <span class="">+</span>
    <span class="">+</span>
  </div>
</section>
